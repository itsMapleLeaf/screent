{
  "name": "screent",
  "version": "0.0.0",
  "type": "module",
  "author": {
    "name": "itsMapleLeaf",
    "email": "mapleleafdev0@gmail.com"
  },
  "description": "a fun and friendly screenshot and screen recording app",
  "main": "build/main.cjs",
  "repository": "https://github.com/itsMapleLeaf/screent",
  "scripts": {
    "clean": "del-cli build public/build",
    "dev": "pnpm run clean && remix-electron dev",
    "build": "pnpm run clean && remix-electron build",
    "start": "cross-env NODE_ENV=production electron .",
    "lint": "eslint --ext js,ts,tsx .",
    "lint-fix": "pnpm lint -- --fix",
    "format": "prettier --write .",
    "typecheck": "tsc --noEmit",
    "dist": "pnpm run build && electron-builder",
    "pack": "pnpm run dist -- --dir",
    "release": "pnpm run dist -- --publish always"
  },
  "dependencies": {
    "@remix-electron/main": "^2.0.0-alpha.5",
    "@remix-run/dev": "^1.4.0",
    "@remix-run/node": "^1.4.0",
    "@remix-run/react": "^1.4.0",
    "@remix-run/server-runtime": "^1.4.0",
    "electron-store": "^8.0.1",
    "execa": "^5",
    "ffmpeg-static": "^5.0.0",
    "mobx": "^6.5.0",
    "pulseaudio.js": "^1.3.0",
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "zod": "^3.14.4"
  },
  "devDependencies": {
    "@itsmapleleaf/configs": "^1.1.2",
    "@remix-electron/cli": "^2.0.0-alpha.5",
    "@types/ffmpeg-static": "^3.0.1",
    "@types/node": "^17.0.24",
    "@types/react": "^18.0.5",
    "@types/react-dom": "^18.0.1",
    "@types/sharp": "^0.30.2",
    "@typescript-eslint/eslint-plugin": "^5.19.0",
    "@typescript-eslint/parser": "^5.19.0",
    "autoprefixer": "^10.4.4",
    "clsx": "^1.1.1",
    "cross-env": "^7.0.3",
    "del-cli": "^4.0.1",
    "electron": "^18.0.4",
    "electron-builder": "^23.0.3",
    "eslint": "^8.13.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-import-resolver-typescript": "^2.7.1",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-react": "^7.29.4",
    "eslint-plugin-react-hooks": "^4.4.0",
    "eslint-plugin-unicorn": "^42.0.0",
    "esno": "^0.14.1",
    "fast-glob": "^3.2.11",
    "mobx-react-lite": "^3.3.0",
    "nodemon": "^2.0.15",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.12",
    "prettier": "^2.6.2",
    "sharp": "^0.30.3",
    "tailwindcss": "^3.0.24",
    "toml": "^3.0.0",
    "tsup": "^5.12.5",
    "type-fest": "^2.12.2",
    "typescript": "^4.6.3",
    "vite": "^2.9.5"
  },
  "tsup": {
    "entryPoints": [
      "src/app/main.ts"
    ],
    "target": "node16",
    "format": [
      "cjs"
    ]
  },
  "postcss": {
    "plugins": {
      "tailwindcss": {}
    }
  },
  "prettier": "@itsmapleleaf/configs/prettier",
  "eslintConfig": {
    "extends": [
      "./node_modules/@itsmapleleaf/configs/eslint"
    ],
    "rules": {
      "unicorn/filename-case": "off",
      "unicorn/prevent-abbreviations": [
        "warn",
        {
          "replacements": {
            "props": false,
            "args": false,
            "ref": false
          }
        }
      ]
    }
  }
}
